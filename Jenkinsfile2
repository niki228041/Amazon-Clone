#!groovy
//  groovy Jenkinsfile
pipeline  {
    agent any;
      stages {
        
         stage("Backup files")
         {
             steps{
                sh """
                #!/bin/bash
                echo "Hello World"
                """
             }
         }
      }
post{
   success {
       script {
                // Send a Telegram notification on build success
                telegramSend(
                    message: "Build of ${currentBuild.fullDisplayName} was successful!",
                    chatId: 4073766435
                )
            }
     }

     aborted {
       script {
                // Send a Telegram notification on build success
                telegramSend(
                    message: "Build of ${currentBuild.fullDisplayName} was aborted!",
                    chatId: 4073766435
                )
            }

     }
     failure {
       script {
                // Send a Telegram notification on build success
                telegramSend(
                    message: "Build of ${currentBuild.fullDisplayName} was failed!",
                    chatId: 4073766435
                )
            }
     }
    always{
            
                echo "=========== Log out from Docker Hub =================="
                sh '''
                docker logout
                '''
    }
    }
}